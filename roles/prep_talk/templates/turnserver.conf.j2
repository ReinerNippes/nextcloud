tls-listening-port=5349
fingerprint
#lt-cred-mech
use-auth-secret
static-auth-secret={{ lookup('password', '{{ credential_store }}/talk_secret chars=ascii_letters,digits length=32') | lower }}
realm={{ fqdn }}
total-quota=100
bps-capacity=0
stale-nonce=600
{% if ssl_certificate_type  == 'letsencrypt' %}
cert=/etc/letsencrypt/live/{{ fqdn }}/fullchain.pem
pkey=/etc/letsencrypt/live/{{ fqdn }}/privkey.pem
{% endif %}
{% if ssl_certificate_type  == 'selfsigned' %}
cert=/etc/nginx/certs/cert.pem
pkey=/etc/nginx/certs/key.pem
{% endif %}
dh-file={{ dhparam_path }}
cipher-list="TLS-CHACHA20-POLY1305-SHA256:TLS-AES-256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384"
#no-loopback-peers
no-multicast-peers
no-tlsv1
no-tlsv1_1
no-stdout-log
