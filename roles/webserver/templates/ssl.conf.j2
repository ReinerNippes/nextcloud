ssl_certificate {{ certificates_path }}/{{ nextcloud_fqdn }}.crt;
ssl_certificate_key {{ certificates_path }}/{{ nextcloud_fqdn }}.key;
ssl_dhparam {{ certificates_path }}/dhparam.pem;
ssl_session_timeout 1d;
ssl_session_cache shared:SSL:50m;
ssl_session_tickets off;
ssl_protocols TLSv1.3 TLSv1.2;
ssl_ciphers 'TLS-CHACHA20-POLY1305-SHA256:TLS-AES-256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384';
ssl_prefer_server_ciphers on;
ssl_ecdh_curve secp384r1;
{% if ssl_certificate_type != 'selfsigned' %}ssl_stapling on;{% endif %}
ssl_stapling_verify on;
